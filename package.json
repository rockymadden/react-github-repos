{
  "name": "react-github-repos",
  "description": "React GitHub repos component with a high degree of customizability.",
  "version": "0.2.0",
  "dependencies": {
    "jquery": "2.1.x",
    "react": "0.13.x"
  },
  "devDependencies": {
    "babelify": "6.1.x",
    "babel-jest": "5.2.x",
    "browserify": "9.0.x",
    "jest-cli": "0.4.x",
    "react-tools": "0.13.x",
    "uglify-js": "2.4.x"
  },
  "homepage": "https://rockymadden.com/react-github-repos/",
  "jest": {
    "scriptPreprocessor": "<rootDir>/jest/preprocessor.js",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-tools"
    ]
  },
  "license": "MIT",
  "scripts": {
    "clean": "npm run clean-dist",
    "dist": "npm run clean-dist && npm run mk-dist && npm run browserify && npm run uglify",
    "typecheck": "npm run flow",
    "browserify": "browserify -t babelify -r jquery -r react -r ./src/GitHubRepos.js:GitHubRepos > dist/GitHubRepos.js",
    "clean-dist": "rm -rf dist",
    "flow": "flow check",
    "mk-dist": "mkdir -p dist",
    "test": "jest",
    "uglify": "uglifyjs dist/GitHubRepos.js -mc > dist/GitHubRepos.min.js"
  }
}
